= form_for(@home, html: { class: "form-horizontal", role: "form" }) do |f|
  - if @home.errors.any?
    .alert.alert-danger.alert-dismissable role="alert"
      button.close type="button" data-dismiss="alert"
        span aria-hidden="true"
          | &times;
        span.sr-only
          | Close
      h4= "#{pluralize(@home.errors.count,"error")} prohibited this home from being saved:"
      ul
        - @home.errors.full_messages.each do |msg|
          li= msg
  .row
    .container-fluid.col-md-6.form_box
      .form-group
        .col-sm-10.col-sm-offset-1
          = f.text_field :address, placeholder: "Address", class: "form-control"
      .form-group
        .col-sm-10.col-sm-offset-1
          = f.text_field :city, placeholder: "City", class: "form-control"
      .form-group
        .col-sm-10.col-sm-offset-1
          = f.text_field :state, placeholder: "State", class: "form-control"
      .form-group
        .col-sm-10.col-sm-offset-1
          = f.number_field :zip, placeholder: "Zip Code", class: "form-control"
    .container-fluid.col-md-6.form_box
      .form-group
        .col-sm-10.col-sm-offset-1
          = f.number_field :number_bedrooms, placeholder: "Number of Bedrooms",class: "form-control"
      .form-group
        .col-sm-10.col-sm-offset-1
          = f.number_field :number_bathrooms, placeholder: "Number of Bathrooms", class: "form-control"
      .form-group
        .col-sm-10.col-sm-offset-1
          = f.number_field :sq_ft, placeholder: "Square Feet", class: "form-control"
      .form-group
        .col-sm-10.col-sm-offset-1
          = f.number_field :price, placeholder: "Price", class: "form-control"
  
  .row
    .container-fluid.col-md-6.form_box
      .form-group
        .col-sm-10.col-sm-offset-1
          = f.text_field :roof, placeholder: "Roof Type", class: "form-control"
      .form-group
        .col-sm-10.col-sm-offset-1
          = f.text_field :year_built, placeholder: "Year Built", class: "form-control"
      .form-group
        .col-sm-10.col-sm-offset-1
          = f.text_field :lot_size, placeholder: "Size of Lot", class: "form-control"
      .form-group
        .col-sm-10.col-sm-offset-1
          = f.number_field :number_of_floors, placeholder: "Number of Floors", class: "form-control"
    .container-fluid.col-md-6.form_box
      .form-group
        = f.label :parking, class: "col-sm-1 col-sm-offset-1 control-label"
        .col-sm-8.col-sm-offset-1
          = f.select :parking, class: "form-control"
            option None
            option Street Parking
            option Attached Garage
            option Detached Garage
      .form-group
        = f.label :hoa, class: "col-sm-1 col-sm-offset-1 control-label"
        .col-sm-10
          = f.check_box :hoa, class: "form-control"
      .form-group
        .col-sm-10.col-sm-offset-1
          = f.number_field :hoa_fee, placeholder: "HOA Fee", class: "form-control"
      .form-group 
        = f.label :image, class: "col-sm-1 col-sm-offset-1 control-label"
        .col-sm-8.col-sm-offset-1
          button.btn.btn-default type="button" 
            = f.hidden_field :image, value: @home.cached_image_data
            = f.file_field :image
    .container-fluid.col-md-12.form_box_desc
      .form-group
        = f.label :description, class: "col-sm-1 col-sm-offset-1 control-label"
        .col-sm-9
          = f.text_area :description, size: "20X200", class: "form-control"
      .form-group
        .col-sm-offset-8.col-sm-2
        = f.submit class: "btn btn-warning black_text"
